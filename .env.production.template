# Production Environment Configuration Template
#
# IMPORTANT: Copy this file to .env.production and fill in all values
# DO NOT commit .env.production to version control!
#
# cp .env.production.template .env.production

# Database Configuration
# IMPORTANT: Change these credentials for production!
DB_HOST=postgres
DB_PORT=5432
DB_NAME=budget_tracker
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_HERE
DB_POOL_SIZE=50
DB_POOL_MIN_IDLE=10

# Redis Configuration
# IMPORTANT: Use a strong password!
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# S3/MinIO Configuration
# For production, use AWS S3 or production MinIO setup
STORAGE_TYPE=s3
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY=YOUR_AWS_ACCESS_KEY
S3_SECRET_KEY=YOUR_AWS_SECRET_KEY
S3_BUCKET_NAME=budget-tracker-prod-attachments

# JWT Configuration
# CRITICAL: Generate a strong random secret (at least 256 bits)
# You can use: openssl rand -base64 64
JWT_SECRET=GENERATE_A_STRONG_RANDOM_SECRET_HERE_MINIMUM_256_BITS
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000
JWT_ISSUER=budget-tracker
JWT_ISSUER_URI=https://your-domain.com
JWT_JWK_SET_URI=https://your-domain.com/.well-known/jwks.json

# CORS Configuration
# Add your frontend domain(s)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://app.your-domain.com

# Stripe Configuration (production keys)
STRIPE_API_KEY=sk_live_YOUR_STRIPE_LIVE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# FX Rates API
FX_PROVIDER=exchangerate-api
FX_API_KEY=YOUR_FX_API_KEY
FX_BASE_URL=https://api.exchangerate-api.com/v4/latest/

# OCR Configuration
OCR_ENABLED=true
OCR_ENGINE=tesseract
TESSERACT_DATA_PATH=/usr/share/tesseract-ocr/4.00/tessdata

# ML Configuration
ML_CATEGORIZATION_ENABLED=true
ML_MODEL_PATH=models/categorization
ML_CONFIDENCE_THRESHOLD=0.75

# Mail Configuration (production SMTP)
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=YOUR_SENDGRID_API_KEY

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# Feature Flags
FEATURE_BANK_INTEGRATION=true
FEATURE_OCR_RECEIPTS=true
FEATURE_ML_CATEGORIZATION=true
FEATURE_INVESTMENTS=true
FEATURE_SHARED_WALLETS=true
FEATURE_SUBSCRIPTIONS=true

# File Upload
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Application
APP_NAME=Budget Tracker
APP_VERSION=1.0.0

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
GRAFANA_ROOT_URL=https://grafana.your-domain.com
GRAFANA_SECRET_KEY=GENERATE_RANDOM_SECRET_FOR_GRAFANA

# pgAdmin Configuration
PGADMIN_EMAIL=admin@your-domain.com
PGADMIN_PASSWORD=CHANGE_THIS_PGADMIN_PASSWORD
