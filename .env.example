# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=budget_tracker
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# S3/MinIO Configuration
STORAGE_TYPE=s3
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=budget-tracker-attachments

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-make-it-very-long
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000
JWT_ISSUER=budget-tracker
JWT_ISSUER_URI=http://localhost:8080
JWT_JWK_SET_URI=http://localhost:8080/.well-known/jwks.json

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Stripe Configuration
STRIPE_API_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# FX Rates API
FX_PROVIDER=exchangerate-api
FX_API_KEY=your_fx_api_key_here
FX_BASE_URL=https://api.exchangerate-api.com/v4/latest/

# OCR Configuration
OCR_ENABLED=true
OCR_ENGINE=tesseract
TESSERACT_DATA_PATH=/usr/share/tesseract-ocr/4.00/tessdata

# ML Configuration
ML_CATEGORIZATION_ENABLED=true
ML_MODEL_PATH=models/categorization
ML_CONFIDENCE_THRESHOLD=0.75

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Feature Flags
FEATURE_BANK_INTEGRATION=true
FEATURE_OCR_RECEIPTS=true
FEATURE_ML_CATEGORIZATION=true
FEATURE_INVESTMENTS=true
FEATURE_SHARED_WALLETS=true
FEATURE_SUBSCRIPTIONS=true

# File Upload
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Application
APP_NAME=Budget Tracker
APP_VERSION=1.0.0
